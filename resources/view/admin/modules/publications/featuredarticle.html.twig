<div class="app-content content ">
	<div class="content-overlay"></div>
	<div class="header-navbar-shadow"></div>
	<div class="content-wrapper">
		<div class="content-header row">
			<div class="content-header-left col-md-9 col-12 mb-2">
				<div class="row breadcrumbs-top">
					<div class="col-12">
						<h2 class="content-header-title float-start mb-0">Featured Article</h2>
						<div class="breadcrumb-wrapper">
							<ol class="breadcrumb">
								<li class="breadcrumb-item">
									<a href="{{ URL }}/admin">Home</a>
								</li>
								<li class="breadcrumb-item active">
									<a href="{{ URL }}/admin/publications">Publications</a>
								</li>
								<li class="breadcrumb-item active">Featured Article</li>
							</ol>
						</div>
					</div>
				</div>
			</div>
		</div>
		<div class="content-body">
			<section class="full-editor">
				<div class="row">
                    <div class="">
                    {{ status|raw }}
                    </div>
					<div class="col-12">
						<div class="card">
							<div class="card-header">
								<h4 class="card-title">Featured Article</h4>
							</div>
							<div class="card-body">
                                <form action="{{URL}}/admin/publications/featuredarticle" method="post">
								<div class="row">
									<div class="col-md-12 col-lg-6 mb-1">
										<label class="form-label" for="featuredarticle_title">Title</label>
										<input type="text" name="featuredarticle_title" id="featuredarticle_title" class="form-control" value="{{ title }}">
									</div>
                                    <div class="col-md-12 col-lg-6">
                                        <label class="form-label" for="featuredarticle_author">Author</label>
										<select class="form-select" name="featuredarticle_author">
                                            {% for player in players %}
                                            <option value="{{ player.id }}">{{ player.name }}</option>
                                            {% endfor %}
                                        </select>
									</div>
									<div class="col-md-12 col-lg-12 mb-1">
										<label class="form-label">Category</label>
										<input type="radio" class="form-check-input" name="featuredarticle_category" id="category_1" value="1">
										<label for="category_1" class="form-check-label">
											<img class="NewsTypeIcon" src="{{ IMAGE_PATH }}/global/content/newsicon_cipsoft_small.gif">
											CipSoft</label>
										<input type="radio" class="form-check-input" name="featuredarticle_category" id="category_2" value="2">
										<label for="category_2" class="form-check-label">
											<img class="NewsTypeIcon" src="{{ IMAGE_PATH }}/global/content/newsicon_community_small.gif">
											Community</label>
										<input type="radio" class="form-check-input" name="featuredarticle_category" id="category_3" value="3">
										<label for="category_3" class="form-check-label">
											<img class="NewsTypeIcon" src="{{ IMAGE_PATH }}/global/content/newsicon_development_small.gif">
											Development</label>
										<input type="radio" class="form-check-input" name="featuredarticle_category" id="category_4" value="4">
										<label for="category_4" class="form-check-label">
											<img class="NewsTypeIcon" src="{{ IMAGE_PATH }}/global/content/newsicon_support_small.gif">
											Support</label>
										<input type="radio" class="form-check-input" name="featuredarticle_category" id="category_5" value="5">
										<label for="category_5" class="form-check-label">
											<img class="NewsTypeIcon" src="{{ IMAGE_PATH }}/global/content/newsicon_technical_small.gif">
											Technical Issues</label>
									</div>
									<div class="col-sm-12 mb-1">
										<div class="form-floating">
											<textarea name="featuredarticle_body" class="form-control" style="height: 100px"></textarea>
										</div>
									</div>
									<div class="col-md-12 col-lg-12">
										<input type="submit" class="btn btn-primary" value="Publicar">
									</div>
								</div>
                                </form>
							</div>
						</div>
					</div>
				</div>
			</section>
		</div>
	</div>
</div>